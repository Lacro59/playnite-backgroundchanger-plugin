    <sys:String x:Key="LOCBcSeconds">秒</sys:String>

    <sys:String x:Key="LOCBcEnableImageAnimatedBackground">启用动画背</sys:String>
    <sys:String x:Key="LOCBcEnableImageAnimatedCover">启用动画封面</sys:String>

    <!-- ImagesManagerView -->

    <sys:String x:Key="LOCBcSteamGridDbSelecty">从 SteamGridDB 选</sys:String>
    <sys:String x:Key="LOCBcFfmpegFile">ffmpeg file</sys:String>
    <sys:String x:Key="LOCBcWebpinfoFile">webpinfo file</sys:String>
    
