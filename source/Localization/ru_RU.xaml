<?xml version="1.0"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- MainView -->

    <sys:String x:Key="LOCBc">Сменщик фонов</sys:String>
    
    <sys:String x:Key="LOCBcManageBackground">Управление фоновыми изображениями</sys:String>
    <sys:String x:Key="LOCBcManageCover">Управление обложками</sys:String>

    <!-- BackgroundChangerSettingsView -->

    <sys:String x:Key="LOCBcSteamGridDbApiKey">API ключ SteamGridDB</sys:String>
    
    <sys:String x:Key="LOCBcEnableBackgroundImage">Отображать фоновое изображение плагина</sys:String>
    <sys:String x:Key="LOCBcEnableCoverImage">Отображать изображение обложки плагина</sys:String>
    
    <sys:String x:Key="LOCBcEnableRandomSelect">Включить случайный выбор</sys:String>
