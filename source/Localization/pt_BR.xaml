<?xml version="1.0"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- MainView -->

    <sys:String x:Key="LOCBc">AlteradorDeFundo</sys:String>
    
    <sys:String x:Key="LOCBcManageBackground">Gerenciar imagens de fundo</sys:String>
    <sys:String x:Key="LOCBcManageCover">Gerenciar imagens de capa</sys:String>

    <!-- BackgroundChangerSettingsView -->

    <sys:String x:Key="LOCBcSteamGridDbApiKey">Chave de api SteamGridDB</sys:String>
    
    <sys:String x:Key="LOCBcEnableBackgroundImage">Exibir a imagem de fundo do plugin</sys:String>
    <sys:String x:Key="LOCBcEnableCoverImage">Exibir a imagem de fundo do plugin</sys:String>
    
